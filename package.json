{
  "name": "solar-group-frontend",
  "version": "1.0.0",
  "description": "SolarGroup Investment Platform Frontend",
  "main": "app.js",
  "scripts": {
    "build": "npm run build:css && npm run build:js && npm run build:images",
    "build:css": "npm run minify:css && npm run optimize:css",
    "build:js": "npm run minify:js && npm run optimize:js",
    "build:images": "npm run optimize:images",
    "minify:css": "cleancss -o dist/style.min.css style.css",
    "minify:js": "terser app.js -o dist/app.min.js -c -m",
    "optimize:css": "postcss dist/style.min.css -o dist/style.optimized.css",
    "optimize:js": "npm run bundle:js",
    "bundle:js": "webpack --mode=production",
    "optimize:images": "imagemin images/* --out-dir=dist/images",
    "dev": "npm run watch",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "nodemon --watch style.css --exec \"npm run build:css\"",
    "watch:js": "nodemon --watch app.js --exec \"npm run build:js\"",
    "serve": "http-server . -p 3000 -c-1",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse.html",
    "audit": "npm run lighthouse && npm run bundle-analyzer",
    "bundle-analyzer": "webpack-bundle-analyzer dist/app.bundle.js",
    "pwa:generate": "workbox generateSW workbox-config.js",
    "pwa:inject": "workbox injectManifest workbox-config.js",
    "test:performance": "npm run build && npm run serve & sleep 5 && npm run lighthouse",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "backup": "./scripts/backup.sh full",
    "monitor": "./scripts/monitor.sh status",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:status": "kubectl get pods -n solar-group",
    "k8s:logs": "kubectl logs -f deployment/solar-group-app -n solar-group",
    "docker:build": "docker build -t solar-group:latest .",
    "docker:run": "docker run -d -p 3000:3000 --name solar-group solar-group:latest",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "clean": "rimraf dist reports",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "workbox-sw": "^6.6.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.16",
    "clean-css-cli": "^5.6.2",
    "cssnano": "^6.0.1",
    "http-server": "^14.1.1",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "lighthouse": "^11.4.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.40.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5",
    "terser": "^5.24.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "workbox-cli": "^7.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
